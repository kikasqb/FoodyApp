<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- trạng thai bị checked -->
    <item android:state_checked="true">

        <shape android:shape="rectangle">
            <!-- dùng để định màu -->
            <solid android:color="@color/colorWhile"></solid>
            <!--  dùng để vẽ đường viền -->
            <stroke android:width="2dp" android:color="@color/colorWhile"></stroke>
            <!-- use để bo tròn các gốc cạnh -->
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp"></corners>
        </shape>

    </item>
    <!-- trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <!-- dùng để định màu -->
            <solid android:color="@color/colorPrimaryDark"></solid>
            <!--  dùng để vẽ đường viền -->
            <stroke android:width="2dp" android:color="@color/colorWhile"></stroke>
            <!-- use để bo tròn các gốc cạnh -->
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp"></corners>
        </shape>

    </item>
</selector>