<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/transprenttrongsuot"
        android:backgroundTint="@color/transprenttrongsuot"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="255dp"
            android:layout_height="118dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/foodytext" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorWhile"
            android:drawableLeft="@drawable/ic_perm_identity_white_24dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:text="Name"
            android:textColor="@color/colorWhile" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorWhile"
            android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
            android:ems="10"
            android:hint="Pass"
            android:inputType="textPassword"
            android:textColor="@color/colorWhile"
            android:textColorHint="@color/colorWhile" />

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark"
            android:text="Button"
            android:textAllCaps="false"
            android:textColor="@color/colorWhile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/colorWhile"
                android:paddingLeft="10dp"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Hoáº·c"
                android:textColor="@color/colorWhile" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/colorWhile"
                android:paddingRight="10dp"></View>
        </LinearLayout>
        <com.google.android.gms.common.SignInButton
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp">
        </com.google.android.gms.common.SignInButton>
        <com.facebook.login.widget.LoginButton
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" />
    </LinearLayout>
</RelativeLayout>